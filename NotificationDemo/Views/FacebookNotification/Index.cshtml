@model Message
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Webslesson Tutorial</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                        <span class="label label-pill label-danger count" style="border-radius:10px;"></span>
                        Notification
                        <ul class="dropdown-menu"></ul>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <form id="comment_form" method="post">
        <div class="form-group">
            <label>Enter Subject</label>
            <input type="text" name="Subject" id="subject" class="form-control">
        </div>
        <div class="form-group">
            <label>Enter Comment</label>
            <textarea name="MessageText" id="MessageText" class="form-control" rows="5"></textarea>
        </div>

        <div class="form-group">
            <input type="button" id="SendButton" class="btn btn-info" value="Send Notification" />
        </div>

    </form>

    @*<div class="form-group">
        <input type="button" name="createButton" id="createButton" class="btn btn-info" value="Send Notification" />
    </div>*@



</div>


<script>


    $("#SendButton").click(function () {
        $.ajax({
           type: 'Post',
            url: '/FacebookNotification/Insert',
            //remove form data with serialize
            data: $("#comment_form").serialize()
        })

            .done(function (response) {
            //clear from field after submit
            $('#comment_form')[0].reset();

        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("FAIL");
        });

       

    })

